.news-list {
  width: 100%;
  height: 260rpx;
  border-bottom: 1px solid #e8e8e8;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.news-text {
  width: 60%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.news-text .news-title {
  font-size: 16px;
  margin: 0 20rpx;
  margin-top: 20rpx;
}

.news-text .news-time {
  font-size: 15px;
  color: #2f4f4f;
  margin-left: 20rpx;
  margin-bottom: 30rpx;
}

.news-image {
  width: 40%;
  height: 100%;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.news-image image {
  width: 100%;
  height: 70%;
}
